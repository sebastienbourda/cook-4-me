<div class="banner" style="background-image: linear-gradient(rgba(30,30,30,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80');">
 <div class="blur">
  <h2><%= @offer.title %></h2>
 </div>
</div>

<div class="container mt-4 d-flex justify-content-evenly">
  <div>
    <h3>Your chef: <%= @chef.first_name %></h3>
    <img src="https://images.unsplash.com/photo-1600565193348-f74bd3c7ccdf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8Y2hlZnxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60" alt="", width="300">
  </div>
  <div class="bg-primary w-25">
    Book it
  </div>
</div>
<div class="container cards mt-4 d-flex justify-content-evenly">
  <% @offer.meals.each do |meal| %>
    <div class="card">
      <img src="https://images.unsplash.com/photo-1519708227418-c8fd9a32b7a2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2370&q=80" alt="">
      <h4><%= meal.name %></h4>
      <ul class = "list-group list-group-flush">
        <% JSON.parse(meal.ingredients).each do |ingredient| %>
          <li class="list-group-item fw-lighter p-0">
            <p><%= ingredient %></p>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
