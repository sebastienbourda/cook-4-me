<% case booking.status %>
<% when "pending" %>
  <div class="orange">
    <span>Status</span>
    <h5><%= booking.status.capitalize %></h5>
  </div>
<% when "confirmed" %>
  <div class="green">
    <span>Status</span>
    <h5><%= booking.status.capitalize %></h5>
  </div>
<% when "rejected" %>
  <div class="red">
    <span>Status</span>
    <h5><%= booking.status.capitalize %></h5>
  </div>
<% end %>
